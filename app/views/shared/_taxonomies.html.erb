<div id="taxonomies" class="sidebar-item">
  <% taxonomy = Taxonomy.find_by_name('Marcas') %>
  <ul class="navigation-list">
    <li<%= ' class="current"' if @taxon && @taxon == taxonomy.root %>>
      <%= link_to t("shop_by_taxonomy", :taxonomy => taxonomy.name), seo_url(taxonomy.root), :class => 'root' %></li>
      <% taxonomy.root.children.sort_by{|t|t.name}.each do |taxon| %>
        <li<%= ' class="current"' if @taxon and ([@taxon] + @taxon.ancestors).include?(taxon) %>>
           <%= link_to taxon.name, seo_url(taxon) %></li>
    <% end %>
  </ul>
</div>
